{
  "name": "memorize",
  "version": "1.0.0",
  "description": "a full stack project with monorepo",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:server": "yarn workspace @memorize/server jest",
    "test:web": "yarn workspace @memorize/web jest",
    "prepare": "husky",
    "eslint:server": "yarn workspace @memorize/server eslint src --ext .ts --fix",
    "eslint:web": "yarn workspace @memorize/web eslint src src/**/*.{ts,tsx} --fix",
    "build:server": "yarn workspace @memorize/server tsup",
    "start-dev:server": "yarn workspace @memorize/server tsx watch --env-file .env src/server.ts",
    "docker-build:dev": "docker build -t memorize . && docker run -p 3333:3333 -d memorize"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Felipe Emanuel",
  "license": "MIT",
  "devDependencies": {
    "@memorize/eslint-config": "*",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
